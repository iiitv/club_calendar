root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf

[*.{kt,kts}]
indent_size = 4
max_line_length=off

[*.dart]
indent_brace_style = K&R
max_line_length = 120

[*.md]
max_line_length = off
trim_trailing_whitespace = false
